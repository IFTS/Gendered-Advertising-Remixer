<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.FormHeading")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
	</s:states>
	
	<!-- background -->
	<s:Rect width="100%" height="100%" radiusY="4" radiusX="4" >
		<s:filters>
			<s:DropShadowFilter blurX="6" blurY="6" alpha="0.17" distance="0" angle="90" inner="true" />
		</s:filters>
		<s:fill>
			<s:LinearGradient rotation="90" interpolationMethod="rgb" spreadMethod="pad">
				<s:GradientEntry color="0xacacac" />
				<s:GradientEntry color="white" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:HGroup verticalAlign="middle">
		<s:Label id="labelDisplay" width="100%" height="100%"
				 paddingTop="18" paddingLeft="10"
				 paddingBottom="10" 
				 color="white" fontWeight="bold" fontSize="22" fontFamily="Trebuchet MS" />
		<s:BitmapImage source="@Embed('/assets/youtube_logo.png')" smooth="true" />
	</s:HGroup>
	
	<!-- SkinParts
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
</s:Skin>
