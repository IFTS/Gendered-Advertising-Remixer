<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.BorderContainer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!-- background -->
	<s:Rect top="0" right="0" bottom="0" left="0" radiusX="4" radiusY="4" >
		<s:filters>
			<s:DropShadowFilter blurX="2" blurY="2" alpha="0.3" distance="2" angle="45" />
		</s:filters>
		<s:stroke>
			<s:SolidColorStroke color="0x6a6a6a" weight="0.5" />
		</s:stroke>
		<s:fill>
			<!--<s:SolidColor color="0xffffff" />-->
			<s:BitmapFill source="@Embed(source='/assets/video.png')" alpha="0.8" />
		</s:fill>
	</s:Rect>
	<!-- content -->
	<s:Group id="contentGroup">
		
	</s:Group>
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	name=contentGroup, type=spark.components.Group, required=false
	-->
</s:Skin>
